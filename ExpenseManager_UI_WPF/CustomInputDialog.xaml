<UserControl x:Class="ExpenseManager_UI_WPF.CustomInputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="150" Width="300">
	<StackPanel>
		<TextBlock Text="{Binding Title}" HorizontalAlignment="Center" FontSize="16" Margin="10"/>
		<TextBox x:Name="customInputTextBox" Width="200" Margin="10"/>
		<Button x:Name="OKButton" Content="OK" Width="75" HorizontalAlignment="Center" Margin="10" Click="OK_Click"/>
		<Button x:Name="CancelButton" Content="Cancel" Width="75" HorizontalAlignment="Center" Margin="10" Click="Cancel_Click"/>
	</StackPanel>
</UserControl>
